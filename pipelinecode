pipeline {
    agent any
    stages {
        stage('Clone Code') {
            steps {
                git branch: 'main',
                url: 'https://github.com/Arnab-crick/Jenkins-docker-demo.git'
            }
        }
        stage('Compile') {
            steps {
                sh 'javac HelloWorld.java'
            }
        }
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t hello-jenkins-docker .'
            }
        }
        stage('Run Container') {
            steps {
                sh 'docker run --rm hello-jenkins-docker'
            }
        }
    }
}
